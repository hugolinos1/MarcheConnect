rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * MARCHÃ‰CONNECT SECURITY RULES - PROTOTYPE VERSION
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isExistingAdmin() {
      return isAdmin() && resource != null;
    }

    // --- Collection Rules ---

    match /roles_admin/{adminId} {
      allow get, list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }

    match /market_configurations/{marketConfigId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /pre_registrations/{preRegistrationId} {
      // Allow anyone to create a registration
      allow create: if true;
      // Only admins can see the full list or manage them
      allow get, list, update, delete: if isAdmin();
    }

    match /exhibitor_details/{exhibitorDetailId} {
      // Allow anyone to create/update their details (Form 2)
      // In a real app, we'd use a unique token or auth, but for the prototype 
      // we allow writes if they know the ID (link from email)
      allow create, update: if true;
      allow get, list, delete: if isAdmin();
    }
  }
}