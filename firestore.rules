rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Fonctions d'aide ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == "hugues.rabier@gmail.com" ||
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }

    // --- Règles des collections ---

    match /market_configurations/{marketConfigId} {
      // Lecture toujours autorisée pour le bon fonctionnement du site et de l'admin
      allow read: if true;
      allow write: if isAdmin();
    }

    match /pre_registrations/{preRegistrationId} {
      // Tout le monde peut postuler et voir son statut via son ID
      allow create: if true;
      allow get: if true;
      // Seul l'admin peut lister et modifier
      allow list, update, delete: if isAdmin();
    }

    match /exhibitor_details/{exhibitorDetailId} {
      // Lecture et création autorisées pour les exposants acceptés (via leur ID)
      allow read, create, update: if true;
      // Seul l'admin peut lister/supprimer
      allow list, delete: if isAdmin();
    }

    match /roles_admin/{adminId} {
      // Lecture restreinte à soi-même ou au super-admin
      allow read: if isSignedIn() && (request.auth.uid == adminId || request.auth.token.email == "hugues.rabier@gmail.com");
      // Seul le super-admin peut gérer les rôles
      allow write: if isSignedIn() && request.auth.token.email == "hugues.rabier@gmail.com";
    }

    match /admin_requests/{requestId} {
      // Tout utilisateur connecté peut faire une demande
      allow create: if isSignedIn() && request.auth.uid == requestId;
      // Lecture pour l'intéressé ou l'admin
      allow read: if isSignedIn() && (request.auth.uid == requestId || isAdmin());
      // Seul l'admin peut valider/supprimer
      allow write: if isAdmin();
    }
  }
}