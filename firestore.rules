
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Fonctions d'aide ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == "hugues.rabier@gmail.com" ||
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }

    function isSuperAdmin() {
      return isSignedIn() && (
        request.auth.token.email == "hugues.rabier@gmail.com" ||
        (exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)).data.isSuperAdmin == true)
      );
    }

    // --- Règles des collections ---

    match /market_configurations/{marketConfigId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /pre_registrations/{preRegistrationId} {
      allow create: if true;
      allow get: if true;
      allow list, update, delete: if isAdmin();
    }

    match /exhibitor_details/{exhibitorDetailId} {
      allow read, create, update: if true;
      allow list, delete: if isAdmin();
    }

    match /email_templates/{templateId} {
      allow read, write: if isAdmin();
    }

    match /roles_admin/{adminId} {
      // Un admin peut lire ses propres droits, un super admin peut tout voir/écrire
      allow read: if isSignedIn() && (request.auth.uid == adminId || isSuperAdmin());
      allow write: if isSuperAdmin();
    }

    match /admin_requests/{requestId} {
      // Lecture pour l'intéressé ou le super admin
      allow read: if isSignedIn() && (request.auth.uid == requestId || isSuperAdmin());
      // Création autorisée pour tout le monde (pour faire sa demande)
      // Mise à jour autorisée pour le propriétaire ou le super admin
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (request.auth.uid == requestId || isSuperAdmin());
      // Seul le super admin peut tout faire
      allow write: if isSuperAdmin();
    }
  }
}
