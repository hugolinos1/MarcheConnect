
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * MARCHÃ‰CONNECT SECURITY RULES
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == "hugues.rabier@gmail.com" ||
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }

    // --- Collection Rules ---

    match /roles_admin/{adminId} {
      allow get: if isSignedIn() && (request.auth.uid == adminId || isAdmin());
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }

    match /admin_requests/{requestId} {
      allow create: if isSignedIn() && request.auth.uid == requestId;
      allow get: if isSignedIn() && (request.auth.uid == requestId || isAdmin());
      allow list, update, delete: if isAdmin();
    }

    match /market_configurations/{marketConfigId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /pre_registrations/{preRegistrationId} {
      allow create: if true;
      allow get: if true;
      allow list, update, delete: if isAdmin();
    }

    match /exhibitor_details/{exhibitorDetailId} {
      allow create, update, get: if true;
      allow list, delete: if isAdmin();
    }
  }
}
