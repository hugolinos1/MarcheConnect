
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * MARCHÃ‰CONNECT SECURITY RULES - PROTOTYPE VERSION
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // In prototype mode, we allow access to all authenticated users
      // to facilitate easy testing and demonstration of admin features.
      return isSignedIn();
    }

    // --- Collection Rules ---

    match /roles_admin/{adminId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /market_configurations/{marketConfigId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /pre_registrations/{preRegistrationId} {
      // Anyone can submit a pre-registration
      allow create: if true;
      // Admins (authenticated users in this prototype) can manage registrations
      allow get, list, update, delete: if isAdmin();
    }

    match /exhibitor_details/{exhibitorDetailId} {
      // Anyone can submit or update their details (using Form 2 link)
      allow create, update: if true;
      // Admins (authenticated users in this prototype) can manage details
      allow get, list, delete: if isAdmin();
    }
  }
}
