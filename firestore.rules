
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Fonctions d'aide ---

    function isSignedIn() {
      return request.auth != null;
    }

    // BYPASS MASTER ADMIN (God Mode)
    // Priorité absolue pour le compte de Hugues
    function isMasterAdmin() {
      return isSignedIn() && (
        request.auth.token.email == "hugues.rabier@gmail.com" ||
        request.auth.uid == "8OMUKADsrGNJdRcS10IRBwFo2aK2"
      );
    }

    function isAdmin() {
      return isMasterAdmin() || exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isSuperAdmin() {
      return isMasterAdmin() || (
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) && 
        get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)).data.isSuperAdmin == true
      );
    }

    // --- Règles des collections ---

    match /market_configurations/{marketConfigId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /pre_registrations/{preRegistrationId} {
      allow read, create: if true;
      allow write: if isAdmin();
    }

    match /exhibitor_details/{exhibitorDetailId} {
      allow read, create, update: if true;
      allow list, delete: if isAdmin();
    }

    match /email_templates/{templateId} {
      allow read, write: if isAdmin();
    }

    match /roles_admin/{adminId} {
      allow read: if isSignedIn() && (request.auth.uid == adminId || isSuperAdmin());
      allow write: if isSuperAdmin();
    }

    match /admin_requests/{requestId} {
      allow read: if isSignedIn() && (request.auth.uid == requestId || isSuperAdmin());
      allow create: if isSignedIn();
      allow update: if isSuperAdmin() || (isSignedIn() && request.auth.uid == requestId);
      allow delete: if isSuperAdmin();
    }
  }
}
