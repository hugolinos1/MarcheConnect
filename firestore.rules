
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Fonctions d'aide ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == "hugues.rabier@gmail.com" ||
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }

    // --- Règles des collections ---

    match /market_configurations/{marketConfigId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /pre_registrations/{preRegistrationId} {
      allow create: if true;
      allow get: if true;
      allow list, update, delete: if isAdmin();
    }

    match /exhibitor_details/{exhibitorDetailId} {
      allow read, create, update: if true;
      allow list, delete: if isAdmin();
    }

    match /email_templates/{templateId} {
      allow read, write: if isAdmin();
    }

    match /roles_admin/{adminId} {
      allow read: if isSignedIn() && (request.auth.uid == adminId || request.auth.token.email == "hugues.rabier@gmail.com");
      allow write: if isSignedIn() && request.auth.token.email == "hugues.rabier@gmail.com";
    }

    match /admin_requests/{requestId} {
      // Lecture pour l'intéressé ou l'admin
      allow read: if isSignedIn() && (request.auth.uid == requestId || isAdmin());
      // Création et mise à jour autorisées pour le propriétaire (pour solliciter un code)
      allow create, update: if isSignedIn() && request.auth.uid == requestId;
      // Seul l'admin peut valider/supprimer (l'admin peut aussi update pour changer le status)
      allow delete: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
