
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * MARCHÃ‰CONNECT SECURITY RULES - PROTOTYPE VERSION
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // In production, check for existence in roles_admin. 
      // For the prototype demo, we allow access if signed in to facilitate testing.
      return isSignedIn();
    }

    // --- Collection Rules ---

    match /roles_admin/{adminId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /market_configurations/{marketConfigId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /pre_registrations/{preRegistrationId} {
      // Allow anyone to create a registration
      allow create: if true;
      // Allow signed in users to manage for the prototype demo
      allow get, list, update, delete: if isAdmin();
    }

    match /exhibitor_details/{exhibitorDetailId} {
      // Allow anyone to create/update their details (Form 2)
      allow create, update: if true;
      // Allow signed in users to manage for the prototype demo
      allow get, list, delete: if isAdmin();
    }
  }
}
